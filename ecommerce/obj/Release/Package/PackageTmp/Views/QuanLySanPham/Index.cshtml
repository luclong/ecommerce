@using ecommerce.Models;
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    // Khoi tao control WebGird
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}
@Html.ActionLink("Tạo Mới","TaoMoi","QuanLySanPham")
@*The hien du lieu thong qua control webGrid*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã Sản Phẩm"),
    grid.Column("TenSP", "Tên Sản Phẩm"),
    grid.Column("MoTa", "Mô Tả", format: p => Html.Raw(p.MoTa)),
    grid.Column("HinhAnh", "Hình Ảnh", format: p => Html.Raw("<img width=\"150\" height=\"100\" src=\"../Content/img-sp/SanPham/" + p.HinhAnh + "\">")),
    grid.Column(format: p => Html.ActionLink("Chỉnh Sửa", "ChinhSua", new {id=p.MaSP })),
    grid.Column(format: p => Html.ActionLink("Xoá", "Xoa", new { id = p.MaSP }))
    ))
<style>
    .divTable{
        width:100%;
        border:1px solid #999999;
    }
    .divTable td {
        border: 1px solid #999999;
    }
    .gridHead{
        background-color:Green;
    }
    .gridHead > th > a {
        color: #fff;
    }
    .gridFooter{
        font-weight:bold;
    }
